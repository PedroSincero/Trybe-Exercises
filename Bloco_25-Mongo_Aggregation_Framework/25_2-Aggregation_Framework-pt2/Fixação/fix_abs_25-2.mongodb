// Utilizando o banco de dados storage , faça o seguinte exercício:

// 1 - Calcule o valor absoluto do lucro total de cada produto.
use ('test');
db.products.aggregate([
  {
    $project: {
      _id: false,
      name: true,
      delta: {
        $abs: {
          $subtract: [
            "$sale_price",
            {
              $add: ["$taxes", "$purchase_price"]
            }
          ]
        }
      }
    }
  }
]);
